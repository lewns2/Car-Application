<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeActivity"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_gravity="top"
        android:gravity="center">

        <Button
            android:background="@drawable/logo_main"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp" />

        <TextView
            android:id="@+id/car_text"
            android:textSize="32dp"
            android:textColor="@color/navy"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="차량 상태" />

        <Button
            android:id="@+id/back_button"
            android:background="@drawable/logout_two"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ID_text"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="님 안녕하세요"/>
    </LinearLayout>

    <view
        android:id="@+id/my_recycler_view1"
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:id="@+id/BluetoothStatus"
        android:text="블루투스버튼을 누르세요"
        android:textColor="@color/navy"
        android:gravity="center"/>

    <view
        android:id="@+id/my_recycler_view2"
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/bluetooth_black"
            android:id="@+id/BluetoothON"
            android:layout_marginRight="50dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:background="@drawable/connect_navy"
            android:id="@+id/BluetoothConnect"/>

    </LinearLayout>

    <view
        android:id="@+id/my_recycler_view3"
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <com.nexenio.bleindoorpositioningdemo.BatteryProgressView
        android:id="@+id/progress"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_centerInParent="true" />

    <view
        android:id="@+id/my_recycler_view4"
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@color/navy"
            android:text="현재 배터리 잔량 : " />

        <TextView
            android:id="@+id/battery_total"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/navy"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/voltage"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/navy"
            android:textSize="24sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textSize="20sp"
            android:textColor="@color/navy"
            android:text="주행 가능 시간 : " />

        <TextView
            android:id="@+id/battery_time"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:textColor="@color/navy" />
    </LinearLayout>

    <view
        android:id="@+id/my_recycler_view5"
        class="androidx.appcompat.app.AlertController$RecycleListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_gravity="bottom"
        android:background="@android:color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/drive_button"
            android:background="@drawable/drive_black"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <Button
            android:id="@+id/car_button"
            android:background="@drawable/battery_navy"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <Button
            android:id="@+id/point_button"
            android:background="@drawable/cash_black"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />

        <Button
            android:id="@+id/security_button"
            android:background="@drawable/cctv_black"
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp" />
    </LinearLayout>
</LinearLayout>
